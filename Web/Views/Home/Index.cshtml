<!-- Info -->

<div class="info center-align" data-aos="fade">
	<div class="main">
		<div class="row">
			<div class="col s12">
				<img class="responsive-img" src="/img/ender-icon.png" style="width:100px">
				<h4>The cake is a lie</h4>
			</div>
		</div>
	</div>
</div>

<!-- / Info -->

<!-- Login -->
<div class="contact" id="login">
	<div class="main">
		<div class="card-panel" data-aos="fade-up">
			<h4 class="center-align">Login</h4>
			<form class="col s12" method="POST" action="/">
				<div class="row">
					<div class="input-field col s6">
						<input type="text" class="form-control" id="username" name="username" placeholder="Name" required />
					</div>
					<div class="input-field col s6">
						<input type="password" class="form-control" id="password" name="password" placeholder="Password" required />
					</div>
				</div>
				<div class="row">
					<div class="col s12">
						<button type='submit' name='btn_login' class='col s12 btn btn-large waves-effect grey darken-4'>Submit</button>
					</div>
				</div>

			</form>
		</div>
	</div>
</div>
<!-- /Login -->
